<?xml version="1.0" encoding="utf-8"?>
<configuration>
 <system.webServer>
   <!-- Map all requests to HttpPlatformHandler -->
   <handlers>
     <add name="httpPlatformHandler"
          path="*"
          verb="*"
          modules="httpPlatformHandler"
          resourceType="Unspecified" />
   </handlers>

   <httpPlatform
       processPath="C:\Users\Mobile Rig\Documents\GitHub\AI_tools_backend_API\ai_review\.venv\Scripts\python.exe"
       arguments="-m uvicorn ai_review.api.main:app --app-dir &quot;C:\Users\Mobile Rig\Documents\GitHub\AI_tools_backend_API\ai_review&quot; --host 127.0.0.1 --port %HTTP_PLATFORM_PORT%"
       startupTimeLimit="120"
       processesPerApplication="1"
       stdoutLogEnabled="true"
       stdoutLogFile="C:\inetpub\temp\ai-review\stdout\stdout"
       rapidFailsPerMinute="10">

     <environmentVariables>
       <!-- Keep Python output unbuffered so logs show up -->
       <add name="PYTHONUNBUFFERED" value="1" />
       <add name="PYTHONNOUSERSITE" value="1" />
       <!-- Let your app import from the project folder -->
       <add name="PYTHONPATH" value="C:\Users\Mobile Rig\Documents\GitHub\AI_tools_backend_API\ai_review" />
       <!-- EXTEND, do not replace, the system PATH -->
       <add name="PATH" value="%PATH%;C:\Users\Mobile Rig\Documents\GitHub\AI_tools_backend_API\ai_review\.venv\Scripts" />
     </environmentVariables>

   </httpPlatform>
 </system.webServer>
</configuration>